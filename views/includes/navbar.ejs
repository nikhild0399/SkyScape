<style>
  :root {
    --primary-color: #fe424d; /* Red */
    --secondary-color: #ff0202;
    --navbar-padding: 0.5rem 1rem;
  }

  .navbar {
    font-family: Arial, sans-serif;
    padding: var(--navbar-padding);

  }

  .navbar-brand {
 
    color: var(--secondary-color);
  }

  .navbar-nav .nav-link {
    padding: 0.5rem 1rem;
    color: var(--secondary-color);
  }

  .navbar-nav .nav-link.btn {
    border-radius: 0.5rem;
    padding: 0.375rem 0.75rem;
  }

  .form-control {
    padding: 0.375rem 0.75rem;
    font-size: 0.9rem;
    border: 2px solid var(--primary-color);
    border-radius: 0.5rem;
    height: auto;
  }

  .search-btn {
    background-color: var(--primary-color);
    color: #fff;
    border: none;
    border-radius: 16px;
    padding: 0.375rem 0.75rem;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
  }
  .search-btn :hover {
    background-color: #ff0202;
    color: #fff;
  }

  .search-btn i {
    margin-right: 0.5rem;
  }

  .search-box {
    display: flex;
    align-items: center;
  }
  .search-input{
    border-radius: 16px;
    padding: 0.375rem 0.75rem;
  }
</style>

<nav class="navbar navbar-expand-md navbar-light bg-white shadow-sm sticky-top">
  <div class="container-fluid">
    <a
      class="navbar-brand text-primary fs-4 fw-bold d-flex align-items-center"
      href="/listings"
    >
      <i class="fa-regular fa-sun me-2" style="color: #ff0000;"></i>
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link text-dark fw-bold px-3" href="/listings">Explore</a>
      </div>
      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search" action="/listings/search" method="GET">
          <input
            class="form-control me-2 search-input"
            type="search"
            name="query"
            placeholder="Search Destination"
            aria-label="Search"
          />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
            Search
          </button>
        </form>
        
      </div>
      <div class="navbar-nav ms-auto">
        <a
          class="nav-link text-dark fw-bold px-3 btn btn-outline-primary rounded-pill me-2"
          href="/listings/new"
          >Host your Home</a
        >
        <% if (!currUser) { %>
        <a class="nav-link text-dark fw-bold px-3" href="/signup">Sign Up</a>
        <a
          class="nav-link text-dark fw-bold px-3 btn btn-primary rounded-pill me-2"
          href="/login"
          >Login</a
        >
        <% } else { %>
        <a class="nav-link text-dark fw-bold px-3" href="/logout">Log out</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
